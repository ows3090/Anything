<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_all_round_corner_20dp"
            android:backgroundTint="@color/sunshade">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/carterone_regular"
                android:gravity="center_horizontal"
                android:text="1 recommendation left"
                android:textColor="@color/dune"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:text="You can get one more\nrecommendation!"
                android:textColor="@color/dune"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_all_round_corner_12dp"
                android:backgroundTint="@color/dune"
                android:fontFamily="@font/carterone_regular"
                android:text="@string/confirm"
                android:textColor="@color/sunshade"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_subtitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>